<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="88dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/SELECT_PROFILE"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <android.widget.Button
        android:id="@+id/button2Min"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:background="@drawable/designbutton"
        android:text="@string/MIN2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.133" />

    <android.widget.Button
        android:id="@+id/button5Min"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:background="@drawable/designbutton"
        android:text="@string/MIN5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toEndOf="@+id/button2Min"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.133" />

    <android.widget.Button
        android:id="@+id/button10Min"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:text="@string/MIN10"
        android:background="@drawable/designbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2Min"
        app:layout_constraintVertical_bias="0.168" />

    <android.widget.Button
        android:id="@+id/button30Min"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/MIN30"
        android:background="@drawable/designbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toEndOf="@+id/button10Min"
        app:layout_constraintTop_toBottomOf="@+id/button5Min"
        app:layout_constraintVertical_bias="0.168" />

    <android.widget.Button
        android:id="@+id/buttonNever"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:text="@string/NEVER"
        android:background="@drawable/designbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.608" />

    <android.widget.Button
        android:id="@+id/cancelButton"
        android:textColor="@color/white"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:background="@drawable/cancelbutton"
        android:text="@string/CANCEL"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNever"
        app:layout_constraintVertical_bias="0.762" />

    <Button
        android:id="@+id/buttonInfo"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@drawable/infobutton"
        app:backgroundTint="#7C071F"
        app:icon="@drawable/ic_baseline_info_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:layout_width="101dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/logo"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

</androidx.constraintlayout.widget.ConstraintLayout>